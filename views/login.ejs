<%- layout('layouts/boilerplate') %>

<!-- In-House CSS -->
<style>
  html, body {
    height: 100vh;
  }
  body{
    background: url('/Virtual Human.jpg');
    background-size: cover;
    background-attachment: fixed;
    color: aliceblue;
  }
  .card {
    background: transparent;
  }
  form {
    display: flex;
    flex-direction: column;
  }
  .form-group{
    display: inline-block;
    font-size: 1.4rem;
    min-width: 300px;
    min-height: 100px;
  }
  .site-footer {
    margin-top: 400px !important;
    align-self: end;
  }

</style>
<main class="container">
    <div class="card d-flex justify-content-between">
        <div class="card-body">
            <form action="/login" method="POST" class="form d-flex justify-content-center">

            <div class="d-flex justify-content-center">
              <div class="form-group">
                  <label for="username">Username</label>
                  <input type="text" class="form-control bg-shadow-1" name="username" id="username">
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control bg-shadow-1" name="password" id="password">
              </div>
            </div>

            <button class="btn btn-info">Login</button>
            </form>
        </div>
    </div>
</main>
